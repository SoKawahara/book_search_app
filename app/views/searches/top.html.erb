<!--縦方向一覧のためのtemplate-->
<template id="vertical-publish-day">
  <section class="result-item">
      <img class="publish-day-img" src="" alt="">
      <div class="content">
          <p class="title"></p>
          <p class="author"></p>
          <p class="publisher"></p>
          <p class="page-count"></p>
          <p class="value"></p>
          <p class="publish-day focus"></p>
          <h4 class="publish-day-about">詳細:</h4>
          <p class="publish-day-description"></p>
      </div>
  </section>
</template>

<!--グリッドの一つのよそのためのtemplate-->
<template id="grid-layout">
  <section class="grid-container">
      <img class="grid-img" src="" alt="">
      <div class="grid-content">
          <p class="grid-title">僕のヒーローアカデミア</p>
          <p class="grid-author">堀越耕平</p>
          <button class="grid-about">詳細</button>
      </div>
  </section>
</template>

<!--グリッドで詳細を押された際のモーダル画面のためのtemplate-->
<template id="grid-modal">
  <section class="modal-container">
      <img src="" alt="" class="modal-img">
      <div class="modal-content">
          <p class="modal-publisher"></p>
          <p class="modal-page-count"></p>
          <p class="modal-value"></p>
          <p class="modal-about">詳細:</p>
          <p class="modal-description"></p>
          <button class="modal-close">閉じる</button>
      </div>
  </section>
</template>
