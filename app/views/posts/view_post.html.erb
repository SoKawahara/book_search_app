<% provide(:title, "#{User.find(@user_id).name}さんの投稿") %>
<section class="view-post-container">
    <div class="post-image">
        <%= image_tag eval(@post.book_data)["imageLink"] %>
        <div>
          <p>～<%= eval(@post.book_data)["title"] %>～</p>
          <p>作者: <%= eval(@post.book_data)["author"].to_s.gsub(/[\[\]"]/ , "") %></p>
          <p>出版社: <%= eval(@post.book_data)["publisher"] %></p>
          <p>ジャンル: <%= @post.genre %></p>
        </div>

    </div>
    <div class="post-main-content">
        <h2>📖<%= @post.post_name %></h2>
        <div class = "content">
            <p><%= @post.content %></p>
            <div class="scrollable-hint">
                <div>
                    <%= image_tag "finger.png" %>
                </div>
            </div>
        </div>
        <div class="evaluations">
            <div>
                <label for="readability">読みやすさ(5段階)</label>
                <p id = "readability">
                    <% 5.times do |n| %>
                      <% if n <= @post.readability.to_i - 1 %>
                        <%= image_tag "yellow-star.svg" , class: "star-image" %>
                      <% else %>
                        <%= image_tag "black-star.svg" , class: "star-image" %>
                      <% end %>
                    <% end %>
                </p>
            </div>
            <div>
                <label for="convenience">手軽さ(5段階)</label>
                <p id = "convenience">
                    <% 5.times do |n| %>
                      <% if n <= @post.convenience.to_i - 1 %>
                        <%= image_tag "yellow-star.svg" ,class: "star-image" %>
                      <% else %>
                        <%= image_tag "black-star.svg" , class: "star-image" %>
                      <% end %>
                    <% end %>
                </p>
            </div>
            <div>
                <label for="recommendation">初心者へのおすすめ度(5段階)</label>
                <p id = "recommendation">
                    <% 5.times do |n| %>
                      <% if n <= @post.recommendation.to_i - 1 %>
                        <%= image_tag "yellow-star.svg" , class: "star-image" %>
                      <% else %>
                        <%= image_tag "black-star.svg" , class: "star-image" %>
                      <% end %>
                    <% end %>
                </p>
            </div>
        </div>
    </div>
</section>
<% redirect_path = request.referer %>
<% if redirect_path.nil? %>
  <%= link_to "戻る" , "/users/#{@user_id}/1" , class: "back-btn" %>
<% else %>
  <%= link_to "戻る" , redirect_path , class: "back-btn" %>
<% end %>


