<% provide(:title, "#{User.find(@user_id).name}さんの投稿") %>
<section class="view-post-container">
    <div class="post-image">
        <%= image_tag eval(@post.book_data)["imageLink"] %>
        <div>
          <p>～<%= eval(@post.book_data)["title"] %>～</p>
          <p><%= eval(@post.book_data)["author"].to_s.gsub(/[\[\]"]/ , "") %></p>
          <p>ジャンル: <%= @post.genre %></p>
        </div>

    </div>
    <div class="post-main-content">
        <h2>📖<%= @post.post_name %></h2>
        <div class = "content">
            <p><%= @post.content %></p>
        </div>
        <div class="evaluations">
            <div>
                <label for="readability">読みやすさ(1～5)</label>
                <p id = "readability"><%= @post.readability %></p>
            </div>
            <div>
                <label for="convenience">手軽さ(1～5)</label>
                <p id = "convenience"><%= @post.convenience %></p>
            </div>
            <div>
                <label for="recommendation">初心者へのおすすめ度(1～5)</label>
                <p id = "recommendation"><%= @post.recommendation %></p>
            </div>
        </div>
    </div>
</section>
<% redirect_path = request.referer %>
<% if redirect_path.nil? %>
  <%= link_to "戻る" , "/users/#{@user_id}/1" , class: "back-btn" %>
<% else %>
  <%= link_to "戻る" , redirect_path , class: "back-btn" %>
<% end %>