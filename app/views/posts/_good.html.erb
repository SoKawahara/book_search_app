<section class="post-container">
    <%= image_tag eval(good.book_data)["imageLink"] %>
    <div class="content">
      <!-- 感想をdata属性としてタグの中に含ませておく -->
      <p class = "post-name"><%= good.post_name %></p>
      <!-- gsubメソッドを用いることで第１引数の値を第２引数の値で置き換えることができる -->
      <p>作成日時:<%= (good.created_at.getlocal("+09:00")).to_s.gsub("+0900" , "") %></p>
    </div>

    <% if logged_in? %>
      <% if good.who_goods.include?(current_user) %>
        <p class = "good-content" id = "good-content-<%= good.id %>"><%= link_to image_tag("good.png" , class: "good-img") , "/posts/turbo_stream_good_remover/#{good.id}" , data: { turbo_stream: true } %><%= good.who_goods.count %></p>
      <% else %>
        <p class = "good-content" id = "good-content-<%= good.id %>"><%= link_to image_tag("hearts.svg" , class: "good-img") , "/posts/turbo_stream_my_goods/#{good.id}" , data: { turbo_stream: true } %><%= good.who_goods.count %></p>
      <% end %>
    <% end %>
    
    <% if current_user?(@user) %>
      <%= link_to image_tag("edit.svg") , "/posts/edit/#{good.id}" , class: "edit-btn" %>
    <% end %>
    <%= link_to "詳細を見る" , "/posts/#{good.user_id}/#{good.id}" , class: "view-post-btn"%>
</section>