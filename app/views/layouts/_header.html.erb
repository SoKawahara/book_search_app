<header class="common-header">
    <div class="logo">
        <%= link_to "Boopple" , root_path , class: "logo-title" %>
    </div>
    <nav class = "header-nav">
        <%= link_to image_tag("search-logo.svg" , class: "logo-image") , '/searches' %>
        <%= link_to image_tag("text.svg" , class: "logo-image") , "/episodes/index" %>
        <% if current_user.nil? %>
          <%= link_to image_tag("hearts.svg" , class: "logo-image") , "/posts/0/my_goods/1"    %>
        <% else %>
          <%= link_to image_tag("hearts.svg" , class: "logo-image") ,  "/posts/#{current_user.id}/my_goods/1"   %>
        <% end %>
        <%= link_to image_tag("home.svg" , class: "logo-image") , "/posts/feed/1" %>
        <!-- ユーザがログイン中ならユーザのアイコンを表示する -->
        <% if user = current_user %>
          <%= link_to image_tag(gravatar_for(user) , class: "logo-image" , style: "border-radius: 50%; border: 2px solid black") , "/users/#{user.id}/1" %>
        <% else %>
          <%=link_to image_tag("test-account.svg" , class: "logo-image") , login_path %>
        <% end %>
        <%= image_tag "humburger-menu.svg" , class: "humburger-image" , id: "humburger-image"  %>
    </nav>
</header>