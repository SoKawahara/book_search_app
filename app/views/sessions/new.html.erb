<% provide(:title , "ログイン") %>
<h1 class = "new-title">ログイン</h1>
<section class="login">
    <section class="login-form">
        <!-- POSTメソッドの送信先のURLとその際に使用するスコープを宣言する -->
        <%= form_with(url: login_path , scope: :session) do |f| %>
          <%= f.label :email , "メールアドレス:" %>
          <%= f.email_field :email , placeholder: "email-address" %>

          <!-- type = "password"のように指定されるフィールドではセキュリティの観点で入力した内容が・・・に置き換えられる -->
          <%= f.label :password , "パスワード:" %>
          <%= f.password_field :password , placeholder: "password" %>

          <%= f.label :remember_me , "ログインを保持する" , class: "checkbox_label" %>
          <%= f.check_box :remember_me %>


          <%= f.submit "ログイン" , class: "login-btn" %>
        <% end %>
    </section>
    <section class="info">
        <p><span style = "margin-left: -0.8rem">*</span>会員登録がお済みでない方は<%= link_to "こちら" , new_user_path , style: "color: blue"%>から<br>新規会員登録をおこなってください</p>
        <p>*パスワードをお忘れの方は<%= link_to "こちら" , new_password_reset_path , style: "color: blue"%>から</p>
    </section>
</section>